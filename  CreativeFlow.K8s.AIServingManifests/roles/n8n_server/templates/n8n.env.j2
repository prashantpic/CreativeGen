# This file contains environment variables for n8n.
# Managed by Ansible. Do not edit manually.
#
# See n8n documentation for all available options: https://docs.n8n.io/hosting/configuration/

# Database Configuration (PostgreSQL example)
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST={{ n8n_db_host }}
DB_POSTGRESDB_PORT={{ n8n_db_port }}
DB_POSTGRESDB_DATABASE={{ n8n_db_name }}
DB_POSTGRESDB_USER={{ n8n_db_user }}
DB_POSTGRESDB_PASSWORD={{ n8n_db_password }}
DB_POSTGRESDB_SSL={{ n8n_db_ssl }}

# Webhook URL (must be the public URL of your n8n instance)
WEBHOOK_URL=https://{{ n8n_public_domain }}/

# Other important settings
N8N_HOST="0.0.0.0"
N8N_PORT={{ n8n_port }}
NODE_ENV=production
N8N_ENCRYPTION_KEY={{ n8n_encryption_key }} # MUST be a unique 32-character key stored in vault
EXECUTIONS_DATA_PRUNE=true
EXECUTIONS_DATA_MAX_AGE=30 # Prune data older than 30 days